<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".manage_user"
    android:gravity="top"
    tools:showIn="@layout/activity_manage_user"
    android:background="#E1F1FC"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_margin="10dp"
        android:focusable="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:id="@+id/s_user_1"
                android:src="@drawable/user" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_toRightOf="@id/s_user_1"
                android:layout_alignParentLeft="true"
                android:id="@+id/s_text_2"
                android:layout_marginTop="10dp"
                android:textSize="24dp"
                android:text="User Name 1"
                android:textStyle="bold" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_below="@id/s_text_2"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/s_text_3"
                    android:textSize="24dp"
                    android:text="Phone No"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_below="@id/s_text_3"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/s_text_4"
                    android:textSize="24dp"
                    android:text="Last used:"
                    android:textStyle="bold" />


            </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_margin="10dp"
        android:focusable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="left"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:id="@+id/s_user_2"
                android:src="@drawable/user" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/s_text_22"
                android:layout_marginTop="10dp"
                android:textSize="24dp"
                android:text="User Name 1"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_below="@id/s_text_22"
                android:layout_alignParentLeft="true"
                android:id="@+id/s_text_23"
                android:textSize="24dp"
                android:text="Phone No"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_below="@id/s_text_23"
                android:layout_alignParentLeft="true"
                android:id="@+id/s_text_24"
                android:textSize="24dp"
                android:text="Last used:"
                android:textStyle="bold" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_margin="10dp"
        android:focusable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="left"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:id="@+id/s_user_3"
                android:src="@drawable/user" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/s_text_32"
                android:layout_marginTop="10dp"
                android:textSize="24dp"
                android:text="User Name 1"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_below="@id/s_text_32"
                android:layout_alignParentLeft="true"
                android:id="@+id/s_text_33"
                android:textSize="24dp"
                android:text="Phone No"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_below="@id/s_text_33"
                android:layout_alignParentLeft="true"
                android:id="@+id/s_text_34"
                android:textSize="24dp"
                android:text="Last used:"
                android:textStyle="bold" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>